<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_message_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageButton
        android:id="@+id/message_item_user_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:src="@drawable/heart_user_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_item_user_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:maxLines="2"
        android:text="김회원"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/list_item_user_cb"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/message_item_user_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:maxLines="2"
        android:text="2시간 전에 보냄"
        android:textColor="#AAA"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_user_img"
        app:layout_constraintEnd_toStartOf="@id/list_item_user_cb"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/message_item_user_img"
        app:layout_constraintTop_toBottomOf="@id/message_item_user_tv" />

    <ImageButton
        android:id="@+id/list_item_user_cb"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="4dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/camera"
        app:layout_constraintBottom_toBottomOf="@+id/message_item_user_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/message_item_user_img" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/list_item_user_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:src="@drawable/heart_user_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_user_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:maxLines="2"
        android:text="회원님이 알 수도 있는 asdf님이 Instagram을 사용 중입니다."
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_user_img"
        app:layout_constraintEnd_toStartOf="@id/list_item_user_cb"
        app:layout_constraintStart_toEndOf="@id/list_item_user_img"
        app:layout_constraintTop_toTopOf="@id/list_item_user_img" />

    <Switch
        android:id="@+id/list_item_user_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_user_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_item_user_tv"
        app:layout_constraintTop_toTopOf="@id/list_item_user_img" />

</androidx.constraintlayout.widget.ConstraintLayout>